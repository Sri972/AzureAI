@{
    ViewData["Title"] = "Football Fantasy - Upload PDF and Search";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UploadAndSearchPdf" asp-controller="Fantasy" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Upload PDF</label>
        <input type="file" class="form-control" name="file" id="file" required />
    </div>

    <div class="form-group">
        <label for="query">Search Query</label>
        <input type="text" class="form-control" name="query" id="query" placeholder="Enter search query" required />
    </div>

    <button type="submit" class="btn btn-primary">Upload and Search</button>
</form>

